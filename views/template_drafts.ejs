

<!doctype html>
<html lang="en">
   <head>
      <meta charset="UTF-8">
      <meta name="viewport"
         content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
      <meta http-equiv="X-UA-Compatible" content="ie=edge">
      <link rel="stylesheet" type="text/css" href="/static/stylesheets/codebuddy.css">
      <link rel="shortcut icon" type="image/x-icon" href="/static/images/logo-min.png">
      <link rel="stylesheet" href="/static/plugins/icofont/icofont.min.css">
      <link rel="stylesheet" href="/static/fonts/GTWalsheimPro/GTWalsheimPro.css">
      <script src="/static/plugins/chartjs/Chart.min.js"></script>
      <script src="/static/plugins/jquery/jquery.min.js"></script>
      <script src="/static/plugins/select2-4.0.13/js/select2.full.min.js"></script>
      <link rel="stylesheet" href="/static/plugins/select2-4.0.13/css/select2.min.css">
      <script src="/static/plugins/ckeditor/ckeditor.js"></script>
      <title>CodeBuddy</title>
   </head>
   <body>
      <nav>
         <div class="burger" onclick="togglemobilebar()">
            <div class="line1"></div>
            <div class="line2"></div>
            <div class="line3"></div>
         </div>
         <img style="width: 200px;" onclick="window.location.href = '/'" src="/static/images/drafts.png">
         <div class="mobile-sidebar flex-container flex-1">
            <form class="searchform" action="/search" method="POST">
               <input class="searchfield text-input" type="text" name="query" placeholder="Search for contests, problems etc.">
            </form>
            <ul class="nav-links">
               <li><a href="/categories">Categories</a></li>
               <li><a href="/contests">Contests</a></li>
               <li><a href="/leaderboard">Leaderboard</a></li>
               <li><a href="/submissions">Submissions</a></li>
               <li><a href="/coming_soon">Community</a></li>
               <li><a href="/coming_soon">Tutorials</a></li>
            </ul>
         </div>
         <ul class="position-relative flex-container flex-align-center list-style-none">
            <button class="cb-btn">Sign In</button>
            <button class="cb-btn">Sign Up</button>
            <li class="dropdown-hover-show"><img class="user-image-mini" src="/static/images/logo-min.png"></li>
            <li class="dropdown-container">
               <h3 class="padding-5">CodeBuddy<span class="tag">admin</span></h3>
               <h4 class="padding-5 padding-t0">codebuddy</h4>
               <div class="padding-5">
                  <a class="position-relative svg-clickable margin-1 svg-icon-container inline-block" href="#">
                     <svg class="svg-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
                        <path d="M306 472H206c-11 0-20 9-20 20 0 11 9 20 20 20h100c11.1 0 20-9 20-20C326 481 317.1 472 306 472z"/>
                        <path d="M453.5 423.3l-36.8-76.6V160.6C416.7 72.1 344.6 0 256 0S95.3 72.1 95.3 160.6v186.1l-36.8 76.6c-3 6.2-2.6 13.5 1.1 19.3C63.2 448.5 69.6 452 76.5 452h359c6.9 0 13.3-3.5 16.9-9.4C456.1 436.8 456.5 429.5 453.5 423.3zM108.3 412l25-52c1.3-2.7 2-5.7 2-8.7V160.6C135.3 94.1 189.5 40 256 40s120.7 54.1 120.7 120.6v190.6c0 3 0.7 6 2 8.7L403.7 412H108.3z"/>
                     </svg>
                     <span class="tr-number-round">2</span>
                  </a>
                  <a class="position-relative svg-clickable margin-1 svg-icon-container inline-block" href="#">
                     <svg class="svg-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
                        <path d="M467 61H45C20.2 61 0 81.2 0 106v300c0 24.7 20.1 45 45 45h422c24.7 0 45-20.1 45-45V106C512 81.3 491.9 61 467 61zM460.8 91L257 294.8 51.4 91H460.8zM30 399.8V112.1l144.5 143.2L30 399.8zM51.2 421l144.6-144.6 50.7 50.2c5.9 5.8 15.3 5.8 21.2 0L317 277.2 460.8 421H51.2zM482 399.8L338.2 256 482 112.2V399.8z"/>
                     </svg>
                     <span class="tr-number-round">1</span>
                  </a>
               </div>
               <hr/>
               <ul class="dropdown">
                  <li class="dropdown-link"><a href="#">Profile</a></li>
                  <li class="dropdown-link"><a href="#">Acheivements</a></li>
                  <li class="dropdown-link"><a href="#">Settings</a></li>
                  <li class="dropdown-link"><a href="#">Logout</a></li>
               </ul>
            </li>
         </ul>
      </nav>
      <main>
         {% block content %}{% endblock content %}
      </main>
      <footer>
         {% include 'footer.html' %}
      </footer>
      <script>
         const togglemobilebar = () => {
             const burger = document.querySelector(".burger");
             const mobile_sidebar = document.querySelector(".mobile-sidebar");
             const body = document.querySelector("body");
             burger.classList.toggle("burger-active");
             mobile_sidebar.classList.toggle("visible-mobile-sidebar");
             body.classList.toggle("no-scroll");
         }
      </script>
   </body>
</html>

